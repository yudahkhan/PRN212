<Window x:Class="SupermarketManager1.Duy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SupermarketManager1.Duy"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="ProductListDataGrid" HorizontalAlignment="Left" Height="349" Margin="56,0,0,0" VerticalAlignment="Center" Width="543" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Product ID" Binding="{Binding ProductCode}" Width="*"/>
                <DataGridTextColumn Header="Product Name" Binding="{Binding NameP}" Width="*"/>
                <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="*"/>
                <DataGridTextColumn Header="Warranty" Binding="{Binding Warranty}" Width="*"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                <DataGridTextColumn Header="Stock Quantity" Binding="{Binding Quantity}" Width="*"/>
                <DataGridTextColumn Header="Publication Day" Binding="{Binding PublicationDay}" Width="*"/>
                <DataGridTextColumn Header="Supplier Name" Binding="{Binding SupplierName}" Width="*"/>
                <DataGridTextColumn Header="Category Id" Binding="{Binding CateId}" Width="*"/>
                <DataGridTextColumn Header="Category Name" Binding="{Binding Cate.CategoryName}" Width="*"/>
            </DataGrid.Columns>

        </DataGrid>
        <Button x:Name="CreateButton" Content="Create" HorizontalAlignment="Left" Height="56" Margin="645,55,0,0" VerticalAlignment="Top" Width="120" Click="CreateButton_Click"/>
        <Button x:Name="UpdateButton" Content="Update" HorizontalAlignment="Left" Height="56" Margin="645,142,0,0" VerticalAlignment="Top" Width="120" Click="UpdateButton_Click"/>
        <Button x:Name="DeleteButton" Content="Delete" HorizontalAlignment="Left" Height="56" Margin="645,229,0,0" VerticalAlignment="Top" Width="120" Click="DeleteButton_Click"/>
        <Button x:Name="QuitButton" Content="Quit" HorizontalAlignment="Left" Height="56" Margin="645,322,0,0" VerticalAlignment="Top" Width="120" Click="QuitButton_Click"/>
    </Grid>
</Window>
