<Window x:Class="SupermarketManager1.Duy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SupermarketManager1.Duy"
        mc:Ignorable="d"
       Title="Admin Dashboard - Product Management" Height="619" Width="1000" Loaded="Window_Loaded">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label Content="Admin Dashboard - Product Management" Grid.Column="0"/>
            <Label x:Name="WelcomeLabel" Content="Welcome, " Grid.Column="1" FontSize="16" VerticalAlignment="Bottom"/>
        </Grid>

        <Grid Grid.Row="1" Margin="0,10,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Label Content="🔍 Search:" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,0"/>


            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <DataGrid x:Name="ProductListDataGrid" Grid.Column="0" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Product ID" Binding="{Binding ProductCode}" Width="*"/>
                        <DataGridTextColumn Header="Product Name" Binding="{Binding NameP}" Width="*"/>
                        <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="*"/>
                        <DataGridTextColumn Header="Warranty" Binding="{Binding Warranty}" Width="*"/>
                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                        <!-- BỎ cột Quantity -->
                        <DataGridTextColumn Header="Publication Day" Binding="{Binding PublicationDay}" Width="*"/>
                        <DataGridTextColumn Header="Supplier Name" Binding="{Binding SupplierName}" Width="*"/>
                        <DataGridTextColumn Header="Category Id" Binding="{Binding CateId}" Width="*"/>
                        <DataGridTextColumn Header="Category Name" Binding="{Binding Cate.CategoryName}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Grid.Column="1" Margin="10,0,0,0" Width="200" VerticalAlignment="Top">
                    <Button x:Name="CreateButton" Content="Create Product" Height="50" Margin="0,0,0,5" Click="CreateButton_Click"/>
                    <Button x:Name="UpdateButton" Content="Update Product" Height="50" Margin="0,5,0,5" Click="UpdateButton_Click" />
                    <Button x:Name="DeleteButton" Content="Delete Product" Height="50" Margin="0,5,0,5" Click="DeleteButton_Click"/>
                    <Separator Margin="0,10"/>
                    <!-- THÊM button mới -->
                    <Button x:Name="ManageWarehouseButton" Content="Quản lý Kho" Height="50" Margin="0,5,0,5" Click="ManageWarehouseButton_Click" Background="#FF9800" Foreground="White" FontWeight="Bold"/>
                    <Separator Margin="0,10"/>

                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>