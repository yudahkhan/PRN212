<Window x:Class="SupermarketManager1.Duy.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:SupermarketManager1.Duy"
        mc:Ignorable="d"
        Title="Đăng nhập - Supermarket Management System" 
        Height="538" Width="600" 
        WindowStartupLocation="CenterScreen"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Loaded="Window_Loaded">
    <Grid>
        <materialDesign:Card Padding="40" VerticalAlignment="Center" HorizontalAlignment="Center" MaxWidth="500" Height="467">
            <StackPanel >
                <!-- Logo/Icon -->
                

                <!-- Title -->
                <TextBlock Text="Hệ thống Quản lý Siêu thị" 
                          FontSize="24" 
                          FontWeight="Bold"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,10"
                          Foreground="{DynamicResource PrimaryHueMidBrush}"/>

                <TextBlock Text="Đăng nhập vào hệ thống" 
                          FontSize="14" 
                          HorizontalAlignment="Center"
                          Margin="0,0,0,30"
                          Foreground="{DynamicResource MaterialDesignBodyLight}"/>

                <!-- Username/Email Field -->
                <TextBox x:Name="EmailTextBox" 
                        materialDesign:HintAssist.Hint="Username hoặc Email"
                        materialDesign:HintAssist.IsFloating="True"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        FontSize="16"
                        Margin="0,0,0,20"
                        Height="56"/>

                <!-- Password Field -->
                <PasswordBox x:Name="PasswordTextBox" 
                            materialDesign:HintAssist.Hint="Password"
                            materialDesign:HintAssist.IsFloating="True"
                            Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                            FontSize="16"
                            Margin="0,0,0,30"
                            Height="56"/>

                <!-- Buttons -->
                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="LoginButton" 
                           Content="ĐĂNG NHẬP"
                           Grid.Column="0"
                           Style="{StaticResource MaterialDesignRaisedButton}"
                           Height="45"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Click="LoginButton_Click"
                           materialDesign:ButtonProgressAssist.IsIndeterminate="False"
                           materialDesign:ButtonProgressAssist.Value="0"/>

                    <Button x:Name="QuitButton" 
                           Content="THOÁT"
                           Grid.Column="2"
                           Style="{StaticResource MaterialDesignOutlinedButton}"
                           Height="45"
                           FontSize="16"
                           Click="QuitButton_Click"/>
                </Grid>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</Window>
