<Window x:Class="SupermarketManager1.Duy.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SupermarketManager1.Duy"
        mc:Ignorable="d"
        Title="Đăng nhập - Supermarket Management System" Height="450" Width="800"  Background="#00bfff" Loaded="Window_Loaded">
    <Grid>
        <Label Content="Username" HorizontalAlignment="Left" Height="56" Margin="111,77,0,0" VerticalAlignment="Top" Width="120"  RenderTransformOrigin="0.325,-0.15"/>
        <Label Content="Password" HorizontalAlignment="Left" Height="56" Margin="111,187,0,0" VerticalAlignment="Top" Width="160"  RenderTransformOrigin="0.325,-0.15"/>
        <TextBox x:Name="EmailTextBox" HorizontalAlignment="Left" Margin="289,91,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="28" Width="370"/>
        <PasswordBox x:Name="PasswordTextBox" HorizontalAlignment="Left" Margin="289,201,0,0" VerticalAlignment="Top" Height="28" Width="370" />
        <Button x:Name="LoginButton" Content="Login" HorizontalAlignment="Left" Height="52" Margin="111,296,0,0" VerticalAlignment="Top" Width="204" Click="LoginButton_Click"/>
        <Button x:Name="QuitButton" Content="Quit" HorizontalAlignment="Left" Height="52" Margin="455,296,0,0" VerticalAlignment="Top" Width="204" Click="QuitButton_Click"/>
    </Grid>
</Window>
