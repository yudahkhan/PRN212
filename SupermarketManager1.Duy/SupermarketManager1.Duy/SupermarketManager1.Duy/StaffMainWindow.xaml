<Window x:Class="SupermarketManager1.Duy.StaffMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.FontWeight="Medium"
        TextElement.FontSize="14"
        FontFamily="{materialDesign:MaterialDesignFont}"
        
        xmlns:local="clr-namespace:SupermarketManager1.Duy"
        mc:Ignorable="d"
        Title="Bảng điều khiển Nhân viên - Bán hàng" Height="624" Width="1000" Loaded="Window_Loaded"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <materialDesign:Card Grid.Row="0" Padding="20" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    
                    <TextBlock Text="Bảng điều khiển Nhân viên - Bán hàng" 
                              FontSize="24" FontWeight="Bold"
                              VerticalAlignment="Center"
                              Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock x:Name="WelcomeLabel" Text="Xin chào, " 
                              FontSize="16" 
                              VerticalAlignment="Center"
                              Margin="0,0,15,0"/>
                    <Button Content="Đăng xuất" 
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Width="100" Height="35" 
                            Click="LogoutButton_Click"/>
                </StackPanel>
            </Grid>
        </materialDesign:Card>

        <Grid Grid.Row="1" Margin="0,10,0,0" HorizontalAlignment="Center" VerticalAlignment="Top">

            <materialDesign:Card Padding="30" Width="450" Margin="0,33,0,-33">
                <StackPanel>
                    <TextBlock Text="Tác vụ của bạn" 
                               FontSize="18" FontWeight="Bold" Margin="0,0,0,20"
                               HorizontalAlignment="Center"
                               Foreground="{DynamicResource PrimaryHueMidBrush}"/>

                    <Button x:Name="SaleButton" Height="60" 
                            Click="SaleButton_Click" 
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            FontSize="16" FontWeight="Bold" Margin="0,5">
                        <StackPanel Orientation="Horizontal">
                            
                            <TextBlock Text="Bán hàng"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="ViewInventoryButton" Height="60" 
                            Click="ViewInventoryButton_Click" 
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            FontSize="16" FontWeight="Bold" Margin="0,5">
                        <StackPanel Orientation="Horizontal">
                            
                            <TextBlock Text="Xem Tồn kho"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </materialDesign:Card>

        </Grid>
    </Grid>
</Window>