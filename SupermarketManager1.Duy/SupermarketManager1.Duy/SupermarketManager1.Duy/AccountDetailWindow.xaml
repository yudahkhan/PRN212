<Window x:Class="SupermarketManager1.Duy.AccountDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.FontWeight="Medium"
        TextElement.FontSize="14"
        FontFamily="{materialDesign:MaterialDesignFont}"
        
        mc:Ignorable="d"
        Title="Chi tiết Tài khoản" 
        Height="762" Width="600" 
        SizeToContent="Height" Loaded="Window_Loaded"
        WindowStartupLocation="CenterScreen">

    <materialDesign:Card Padding="25" Margin="15">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,25">
                
                <TextBlock x:Name="TitleLabel" Text="Tạo tài khoản mới" 
                           FontSize="22" FontWeight="Bold" 
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource PrimaryHueMidBrush}"/>
            </StackPanel>


            <StackPanel Grid.Row="1">
                <TextBox x:Name="UsernameTextBox" 
                         materialDesign:HintAssist.Hint="Username *"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,0,15"/>

                <PasswordBox x:Name="PasswordTextBox" 
                             materialDesign:HintAssist.Hint="Password *"
                             Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                             Margin="0,0,0,15"/>

                <TextBox x:Name="FullNameTextBox" 
                         materialDesign:HintAssist.Hint="Họ tên *"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,0,15"/>

                <TextBox x:Name="EmailTextBox"
                         materialDesign:HintAssist.Hint="Email"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,0,15"/>

                <TextBox x:Name="PhoneNumberTextBox"
                         materialDesign:HintAssist.Hint="Số điện thoại"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,0,15"/>

                <DatePicker x:Name="DateOfBirthDatePicker"
                            materialDesign:HintAssist.Hint="Ngày sinh"
                            Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                            Margin="0,0,0,15"/>

                <ComboBox x:Name="RoleComboBox"
                          materialDesign:HintAssist.Hint="Vai trò *"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                          DisplayMemberPath="RoleName" SelectedValuePath="RoleId"
                          SelectionChanged="RoleComboBox_SelectionChanged"
                          Margin="0,0,0,15"/>

                <ComboBox x:Name="WarehouseComboBox" 
                          materialDesign:HintAssist.Hint="Store"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                          DisplayMemberPath="WarehouseName" SelectedValuePath="WarehouseId"
                          Visibility="Collapsed" Margin="0,0,0,15"/>

                <ComboBox x:Name="StatusComboBox"
                          materialDesign:HintAssist.Hint="Trạng thái"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                          Margin="0,0,0,15">
                    <ComboBoxItem Content="Active" IsSelected="True"/>
                    <ComboBoxItem Content="Inactive"/>
                    <ComboBoxItem Content="Locked"/>
                </ComboBox>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Hủy" Width="100" Height="40" Margin="0,0,10,0" 
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Click="CancelButton_Click"/>

                <Button Content="Lưu" Width="100" Height="40" 
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Click="SaveButton_Click"/>
            </StackPanel>
        </Grid>
    </materialDesign:Card>
</Window>