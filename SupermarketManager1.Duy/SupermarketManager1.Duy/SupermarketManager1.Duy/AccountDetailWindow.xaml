<Window x:Class="SupermarketManager1.Duy.AccountDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Chi tiết Tài khoản" Height="600" Width="600" Loaded="Window_Loaded">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Label x:Name="TitleLabel" Content="Tạo tài khoản mới" Grid.Row="0" 
               FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Form -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Username -->
            <Label Content="Username *:" Grid.Row="0" Margin="0,0,0,5"/>
            <TextBox x:Name="UsernameTextBox" Grid.Row="1" Margin="0,0,0,15"/>

            <!-- Password -->
            <Label Content="Password *:" Grid.Row="2" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordTextBox" Grid.Row="3" Margin="0,0,0,15"/>

            <!-- Full Name -->
            <Label Content="Họ tên *:" Grid.Row="4" Margin="0,0,0,5"/>
            <TextBox x:Name="FullNameTextBox" Grid.Row="5" Margin="0,0,0,15"/>

            <!-- Email -->
            <Label Content="Email:" Grid.Row="6" Margin="0,0,0,5"/>
            <TextBox x:Name="EmailTextBox" Grid.Row="7" Margin="0,0,0,15"/>

            <!-- Phone Number -->
            <Label Content="Số điện thoại:" Grid.Row="8" Margin="0,0,0,5"/>
            <TextBox x:Name="PhoneNumberTextBox" Grid.Row="9" Margin="0,0,0,15"/>

            <!-- Date of Birth -->
            <Label Content="Ngày sinh:" Grid.Row="10" Margin="0,0,0,5"/>
            <DatePicker x:Name="DateOfBirthDatePicker" Grid.Row="11" Margin="0,0,0,15"/>

            <!-- Role -->
            <Label Content="Vai trò *:" Grid.Row="12" Margin="0,0,0,5"/>
            <ComboBox x:Name="RoleComboBox" Grid.Row="13" Margin="0,0,0,15"
                      DisplayMemberPath="RoleName" SelectedValuePath="RoleId"
                      SelectionChanged="RoleComboBox_SelectionChanged"/>

            <!-- Warehouse (chỉ hiển thị khi chọn Manager hoặc Staff) -->
            <Label x:Name="WarehouseLabel" Content="Store:" Grid.Row="14" Margin="0,0,0,5" Visibility="Collapsed"/>
            <ComboBox x:Name="WarehouseComboBox" Grid.Row="15" Margin="0,0,0,15" Visibility="Collapsed"
                      DisplayMemberPath="WarehouseName" SelectedValuePath="WarehouseId"/>

            <!-- Status -->
            <Label Content="Trạng thái:" Grid.Row="16" Margin="0,0,0,5"/>
            <ComboBox x:Name="StatusComboBox" Grid.Row="17" Margin="0,0,0,15">
                <ComboBoxItem Content="Active" IsSelected="True"/>
                <ComboBoxItem Content="Inactive"/>
                <ComboBoxItem Content="Locked"/>
            </ComboBox>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Lưu" Width="100" Height="40" Margin="0,0,10,0" 
                    Click="SaveButton_Click" Background="#4CAF50" Foreground="White" FontWeight="Bold"/>
            <Button Content="Hủy" Width="100" Height="40" 
                    Click="CancelButton_Click" Background="#9E9E9E" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>

