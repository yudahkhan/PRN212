<Window x:Class="SupermarketManager1.Duy.DetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SupermarketManager1.Duy"
        mc:Ignorable="d"
        Title="DetailWindow" Height="517" Width="800"  Background="#00bfff" Loaded="Window_Loaded">
    <Grid Height="517" VerticalAlignment="Top">
        <Label Content="Id"  Style="{StaticResource DetailLabel}" HorizontalAlignment="Left" Height="42" Margin="31,58,0,0" VerticalAlignment="Top" Width="131"/>
        <Label Content="Name" Style="{StaticResource DetailLabel}" HorizontalAlignment="Left" Height="37" Margin="31,99,0,0" VerticalAlignment="Top" Width="131"/>
        <Label Content="Price" Style="{StaticResource DetailLabel}" HorizontalAlignment="Left" Height="35" Margin="31,141,0,0"  VerticalAlignment="Top" Width="131"/>
        <Label Content="Warranty " Style="{StaticResource DetailLabel}" HorizontalAlignment="Left" Height="87" Margin="31,186,0,0" VerticalAlignment="Top" Width="154"/>
        <Label Content="Description" Style="{StaticResource DetailLabel}" HorizontalAlignment="Left" Height="61" Margin="31,230,0,0" VerticalAlignment="Top" Width="131"/>
        <Label Content="Quantity" Style="{StaticResource DetailLabel}" HorizontalAlignment="Left" Height="52" Margin="31,302,0,0" VerticalAlignment="Top" Width="131"/>
        <Label Content="Publication Day" Style="{StaticResource DetailLabel}" HorizontalAlignment="Left" Height="52" Margin="31,350,0,0" VerticalAlignment="Top" Width="131"/>
        <Label Content="Supplier Name" Style="{StaticResource DetailLabel}" HorizontalAlignment="Left" Height="52" Margin="31,396,0,0" VerticalAlignment="Top" Width="131"/>
        <Label Content="Category" Style="{StaticResource DetailLabel}" HorizontalAlignment="Left" Height="52" Margin="31,442,0,0" VerticalAlignment="Top" Width="131"/>
        <TextBox x:Name="ProductIdTextBox" HorizontalAlignment="Center" Height="20" Margin="0,63,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="418"/>
        <TextBox x:Name="ProductNameTextBox" HorizontalAlignment="Center" Height="20" Margin="0,113,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="420" RenderTransformOrigin="0.5,0.5">
           
        </TextBox>
        <TextBox  x:Name="ProductPriceTextBox" HorizontalAlignment="Center" Height="20" Margin="0,153,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="420"/>
        <TextBox x:Name="ProductWarrantyTextBox" HorizontalAlignment="Center" Height="20" Margin="0,193,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="420"/>
        <TextBox  x:Name="ProductDescriptionTextBox" HorizontalAlignment="Center" Height="68" Margin="0,230,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="420"/>
        <TextBox  x:Name="ProductQuantityTextBox" HorizontalAlignment="Center" Height="20" Margin="0,314,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="420"/>

        <TextBox  x:Name="ProductPublicationDayTextBox" HorizontalAlignment="Center" Height="20" Margin="0,360,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="420"/>
        <TextBox  x:Name="ProductSupplierNameTextBox" HorizontalAlignment="Center" Height="20" Margin="0,404,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="420"/>
        <ComboBox x:Name="CategoryComboBox" HorizontalAlignment="Center" Height="20" Margin="0,452,0,0" VerticalAlignment="Top" Width="420"/>
        <Button x:Name="DetailWindowButton" Content="Save" HorizontalAlignment="Left" Height="45" Margin="656,63,0,0" VerticalAlignment="Top" Width="120" Click="DetailWindowButton_Click" />
        <Button x:Name="QuitButton" Content="Quit" HorizontalAlignment="Left" Height="50" Margin="656,153,0,0" VerticalAlignment="Top" Width="120" Click="QuitButton_Click"/>
        <Label x:Name="DetailWindowModeLabel" Content="Label" HorizontalAlignment="Left" Height="48" Margin="70,10,0,0" VerticalAlignment="Top" Width="540"/>
    </Grid>
</Window>
