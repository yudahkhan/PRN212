<Window x:Class="SupermarketManager1.Duy.AdjustQuantityWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.FontWeight="Medium"
        TextElement.FontSize="14"
        FontFamily="{materialDesign:MaterialDesignFont}"
        
        mc:Ignorable="d"
        Title="Điều chỉnh số lượng" 
        Height="438" Width="500" 
        SizeToContent="Height"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Loaded="Window_Loaded">

    <materialDesign:Card Padding="25" Margin="15">
        <Grid Margin="-2,-1,-12,-26">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="121*"/>
                <ColumnDefinition Width="7*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="37,0,0,25">
                
                <TextBlock Text="ĐIỀU CHỈNH SỐ LƯỢNG TỒN KHO" 
                           FontSize="18" FontWeight="Bold" 
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource PrimaryHueMidBrush}"/>
            </StackPanel>

            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5,0,5" Grid.ColumnSpan="2">
                <TextBlock Text="Mã sản phẩm:" Width="150" VerticalAlignment="Center" FontSize="16"/>
                <TextBlock x:Name="ProductCodeLabel" FontWeight="Bold" FontSize="16"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,10" Grid.ColumnSpan="2">
                <TextBlock Text="Tồn kho hiện tại:" Width="150" VerticalAlignment="Center" FontSize="16"/>
                <TextBlock x:Name="CurrentQuantityLabel" FontWeight="Bold" FontSize="16" Foreground="Blue"/>
            </StackPanel>

            <TextBox x:Name="NewQuantityTextBox" Grid.Row="3"
                     materialDesign:HintAssist.Hint="Số lượng mới *"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     FontSize="16"
                     Margin="0,10,0,10" Grid.ColumnSpan="2"/>

            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0" Grid.ColumnSpan="2">
                <Button Content="Hủy" Width="100" Height="35" 
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Click="CancelButton_Click"/>
                <Button Content="Lưu" Width="100" Height="35" 
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Click="SaveButton_Click"/>
            </StackPanel>
        </Grid>
    </materialDesign:Card>
</Window>