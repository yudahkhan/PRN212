<Window x:Class="SupermarketManager1.Duy.TransferStockWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.FontWeight="Medium"
        TextElement.FontSize="14"
        FontFamily="{materialDesign:MaterialDesignFont}"
        
        mc:Ignorable="d"
        Title="Chuyển kho" 
        Height="538" Width="700" 
        SizeToContent="Height"
        Loaded="Window_Loaded"
        WindowStartupLocation="CenterScreen">

    <materialDesign:Card Padding="25" Margin="15">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,25">
               
                <TextBlock Text="CHUYỂN KHO" 
                           FontSize="24" FontWeight="Bold" 
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource PrimaryHueMidBrush}"/>
            </StackPanel>

            <StackPanel Grid.Row="1">
                <ComboBox x:Name="FromWarehouseComboBox" Margin="0,0,0,15"
                          materialDesign:HintAssist.Hint="Kho nguồn *"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                          DisplayMemberPath="WarehouseName" SelectedValuePath="WarehouseId"
                          SelectionChanged="FromWarehouseComboBox_SelectionChanged"/>

                <ComboBox x:Name="ToWarehouseComboBox" Margin="0,0,0,15"
                          materialDesign:HintAssist.Hint="Kho đích *"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                          DisplayMemberPath="WarehouseName" SelectedValuePath="WarehouseId"
                          SelectionChanged="ToWarehouseComboBox_SelectionChanged"/>

                <ComboBox x:Name="ProductComboBox" Margin="0,0,0,15"
                          materialDesign:HintAssist.Hint="Sản phẩm *"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                          DisplayMemberPath="Product.NameP" 
                          SelectedValuePath="ProductCode"
                          SelectionChanged="ProductComboBox_SelectionChanged"/>

                <TextBlock x:Name="StockInfoLabel" Text="Tồn kho: 0" 
                           FontWeight="Bold" Foreground="Green" Margin="5,0,0,15"
                           FontSize="16"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="QuantityTextBox" Grid.Column="0" Text="1"
                             materialDesign:HintAssist.Hint="Số lượng chuyển *"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             PreviewTextInput="QuantityTextBox_PreviewTextInput"/>

                    <Button Content="Chuyển" Grid.Column="1" Width="100" Height="48" Margin="10,-5,0,0"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Click="TransferButton_Click" 
                            FontWeight="Bold"/>
                </Grid>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Đóng" Width="100" Height="40" 
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Click="CloseButton_Click"/>
            </StackPanel>
        </Grid>
    </materialDesign:Card>
</Window>