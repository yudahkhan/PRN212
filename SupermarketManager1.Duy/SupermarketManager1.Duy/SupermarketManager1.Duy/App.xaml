<Application x:Class="SupermarketManager1.Duy.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SupermarketManager1.Duy"
             StartupUri="LoginWindow.xaml">
    <Application.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#ffef00"/>
            <Setter Property="Foreground" Value="Red"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="ExtraBold"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#ffef00"/>
            <Setter Property="FontSize" Value="30"/>
        </Style>
        <Style x:Key="DetailLabel"  TargetType="Label">
            <Setter Property="Foreground" Value="#ffef00"/>
            <Setter Property="FontSize" Value="20"/>
        </Style>
    </Application.Resources>
</Application>
