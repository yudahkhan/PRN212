<Window x:Class="SupermarketManager1.Duy.AdminMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SupermarketManager1.Duy"
        mc:Ignorable="d"
       Title="Admin Dashboard - Product Management" Height="600" Width="1000" Loaded="Window_Loaded">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label Content="Admin Dashboard - Product Management" Grid.Column="0"/>
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Label x:Name="WelcomeLabel" Content="Welcome, " FontSize="16" VerticalAlignment="Center"/>
                <Button Content="Logout" Width="80" Height="30" Margin="10,0,0,0" Click="LogoutButton_Click"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1" Margin="0,10,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Label Content="ðŸ” Search:" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox x:Name="SearchTextBox" Grid.Column="1" TextChanged="SearchTextBox_TextChanged" 
                         VerticalAlignment="Center" Margin="0,0,10,0"/>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <DataGrid x:Name="ProductListDataGrid" Grid.Column="0" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Product ID" Binding="{Binding ProductCode}" Width="*"/>
                        <DataGridTextColumn Header="Product Name" Binding="{Binding NameP}" Width="*"/>
                        <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat={}{0:N0}}" Width="*"/>
                        <DataGridTextColumn Header="Warranty" Binding="{Binding Warranty}" Width="*"/>
                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                        <DataGridTextColumn Header="Publication Day" Binding="{Binding PublicationDay}" Width="*"/>
                        <DataGridTextColumn Header="Supplier Name" Binding="{Binding SupplierName}" Width="*"/>
                        <DataGridTextColumn Header="Category Name" Binding="{Binding Cate.CategoryName}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Grid.Column="1" Margin="10,0,0,0" Width="200" VerticalAlignment="Top">
                    <Button x:Name="CreateButton" Content="Create Product" Height="50" Margin="0,0,0,5" Click="CreateButton_Click"/>
                    <Button x:Name="UpdateButton" Content="Update Product" Height="50" Margin="0,5,0,5" Click="UpdateButton_Click" />
                    <Button x:Name="DeleteButton" Content="Delete Product" Height="50" Margin="0,5,0,5" Click="DeleteButton_Click"/>
                    <Separator Margin="0,10"/>
